<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingRight="@dimen/d10"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/d5"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="打酱油 :"
            android:layout_marginLeft="@dimen/d3"
            android:padding="@dimen/d2"
            android:textSize="@dimen/d6"
            android:textColor="@color/blue"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/gray3"
            android:text="2018-4-12"
            android:textSize="11sp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:background="@color/gray0"
        android:layout_marginLeft="@dimen/d10"
        android:layout_marginRight="@dimen/d10"
        android:text="6666666666666666"
        android:layout_marginTop="@dimen/d2"
        android:textSize="12sp"
        android:padding="@dimen/d2"
        android:textColor="@color/gray3"
        android:layout_marginBottom="@dimen/d3"
        android:layout_height="wrap_content"/>

    <include layout="@layout/line"></include>
</LinearLayout>
