<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingRight="@dimen/d5"
    android:paddingLeft="@dimen/d5"
    android:layout_height="wrap_content"
    >

    <TextView
        android:layout_width="match_parent"
        android:text="发布人： 团长"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/d5"
        android:textSize="@dimen/d6"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:text="明天晚上 小树林见"
        android:textColor="@color/white"
        android:textSize="@dimen/d9"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/d5"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:text="2018-4-15 16:44"
            android:gravity="right"
            android:textSize="10sp"
            android:layout_marginLeft="@dimen/d5"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <include layout="@layout/line_match"></include>
</LinearLayout>
