<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="15dp"
              android:paddingRight="15dp"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_header"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="海草"
                android:textColor="@color/blue"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="3dp"
                android:text="2018-4-21 19:47"
                android:textColor="@color/gray2"
                android:textSize="11sp"/>


        </LinearLayout>

    </LinearLayout>
<TextView
    android:layout_width="match_parent"
    android:text="起来嗨起来嗨起来嗨起来嗨起来嗨起来嗨起来嗨起来嗨起来嗨起来嗨起来嗨起来嗨起来嗨起来嗨起来嗨起来嗨起来嗨起来嗨起来嗨起来嗨"
    android:textColor="@color/gray3"
    android:layout_marginTop="@dimen/d3"
    android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="match_parent"
        android:src="@mipmap/samp1"
        android:scaleType="centerCrop"
        android:layout_marginTop="@dimen/d3"
        android:layout_marginBottom="@dimen/d8"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/gray0"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="赞（19）"
            android:gravity="center"
            android:padding="@dimen/d3"
            android:layout_weight="1"
            style="@style/base_text_style"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0.5dp"
            android:background="@color/gray3"
            android:layout_height="@dimen/d10"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="评论（5）"
            android:padding="@dimen/d3"
            android:layout_weight="1"
            android:gravity="center"
            style="@style/base_text_style"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <include layout="@layout/line_match"></include>
</LinearLayout>