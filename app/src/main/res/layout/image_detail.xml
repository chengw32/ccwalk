<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include
        layout="@layout/base_bar_layout"></include>

    <cc.cwalk.com.recycles.RefreshLoadMoreRecyclerView
        android:id="@+id/rc_list"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d15"
        android:background="@color/gray0"

        android:orientation="horizontal">


        <EditText
            android:id="@+id/et_evaluate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="输入内容"
            android:textSize="@dimen/d6"
            android:textColorHint="@color/white"
            android:padding="@dimen/d2"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/tv_evaluate"
            style="@style/base_text_style"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/blue"
            android:gravity="center"
            android:paddingLeft="@dimen/d8"
            android:paddingRight="@dimen/d8"
            android:text="评论"
            android:textColor="@color/white"/>

    </LinearLayout>
</LinearLayout>
