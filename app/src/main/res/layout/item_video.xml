<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/root"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
    <ImageView
        android:layout_width="@dimen/d30"
        android:src="@mipmap/default_head"
        android:layout_height="@dimen/d30" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:textSize="@dimen/d6"
        android:layout_weight="1"
        style="@style/base_text_style"
        android:gravity="top"
        android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/d3"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/d10"
                android:src="@mipmap/default_head"
                android:layout_height="@dimen/d10" />
            <TextView
                android:layout_width="wrap_content"
                style="@style/base_text_style"
                android:textSize="@dimen/d5"
                android:layout_marginLeft="@dimen/d3"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>