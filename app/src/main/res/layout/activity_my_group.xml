<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cc.cwalk.com.tab_four.MyGroupActivity">

    <include layout="@layout/base_bar_layout"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/default_head"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/d5"
            android:background="@drawable/shape_corner_rect_solid_barcolor"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/d15">

            <TextView
                style="@style/base_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C-walk曳步舞协会"
                android:textColor="@color/blue"
                android:textSize="@dimen/d9" />

            <TextView
                style="@style/base_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d3"
                android:text="创建者：海草"
                android:textColor="@color/gray3"
                android:textSize="@dimen/d6" />

            <TextView
                android:id="@+id/tv_time"
                style="@style/base_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d3"
                android:text="创建时间 2018-4-21 17:46"
                android:textColor="@color/white"
                android:textSize="@dimen/d6" />
        </LinearLayout>

        <include layout="@layout/line"></include>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_members"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/d5">

        <ImageView
            android:layout_width="@dimen/d15"
            android:layout_height="@dimen/d15"
            android:src="@drawable/ic_group_member" />

        <TextView
            style="@style/base_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d5"
            android:text="成员管理" />
    </LinearLayout>

    <include layout="@layout/line"></include>

    <LinearLayout
        android:id="@+id/ll_join"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/d5">

        <ImageView
            android:layout_width="@dimen/d15"
            android:layout_height="@dimen/d15"
            android:src="@drawable/ic_add_group" />

        <TextView
            style="@style/base_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d5"
            android:text="入团申请 （999+）" />
    </LinearLayout>
    <include layout="@layout/line"></include>

    <LinearLayout
        android:id="@+id/ll_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/d5">

        <ImageView
            android:layout_width="@dimen/d15"
            android:layout_height="@dimen/d15"
            android:src="@drawable/ic_notice" />

        <TextView
            style="@style/base_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d5"
            android:text="社团公告" />
    </LinearLayout>
    <include layout="@layout/line"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/d5">

        <ImageView
            android:layout_width="@dimen/d15"
            android:layout_height="@dimen/d15"
            android:src="@drawable/ic_notice" />

        <TextView
            style="@style/base_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d5"
            android:text="社团采购" />
    </LinearLayout>

</LinearLayout>
