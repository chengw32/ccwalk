<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cc.cwalk.com.tab_four.MyGroupActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d90"
        android:background="@drawable/background"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_inof_more"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:background="@color/half2_transparent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/bar_height"
                android:padding="12dp"
                android:src="@mipmap/ic_back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="@dimen/d9" />
            <TextView
                style="@style/base_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d5"
                android:text="@string/group_name"
                android:textColor="@color/white"
                android:textSize="@dimen/d9" />

            <TextView
                style="@style/base_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d3"
                android:text="创建者：张伟塔"
                android:layout_marginLeft="@dimen/d5"
                android:textColor="@color/gray3"
                android:textSize="@dimen/d6" />

            <TextView
                style="@style/base_text_style"
                android:layout_width="match_parent"
                android:gravity="right"
                android:paddingRight="@dimen/d15"
                android:layout_height="wrap_content"
                android:padding="@dimen/d3"
                android:text="更多资料>>"
                android:textColor="@color/blue"
                android:textSize="@dimen/d5" />
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/line_match"></include>
    <LinearLayout
        android:id="@+id/ll_members"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/d6">

        <ImageView
            style="@style/group_image_style"
            android:src="@drawable/ic_group_member" />

        <TextView
            style="@style/base_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d5"
            android:text="社团成员" />
    </LinearLayout>

    <include layout="@layout/line"></include>

    <LinearLayout
        android:id="@+id/ll_join"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/d6">

        <ImageView
            style="@style/group_image_style"
            android:src="@drawable/ic_add_group" />

        <TextView
            style="@style/base_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d5"
            android:text="入团申请 （999+）" />
    </LinearLayout>

    <include layout="@layout/line"></include>

    <LinearLayout
        android:id="@+id/ll_purchase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/d6">

        <ImageView
            style="@style/group_image_style"
            android:src="@drawable/ic_group_shopping" />

        <TextView
            style="@style/base_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d5"
            android:text="社团采购" />
    </LinearLayout>
    <include layout="@layout/line"></include>

    <LinearLayout
        android:id="@+id/ll_expenditure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/d6">

        <ImageView
            style="@style/group_image_style"
            android:src="@drawable/ic_group_post" />

        <TextView
            style="@style/base_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d5"
            android:text="社团经费" />
    </LinearLayout>
    <include layout="@layout/line"></include>

    <LinearLayout
        android:id="@+id/ll_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/d6">

        <ImageView
            style="@style/group_image_style"
            android:src="@drawable/ic_notice" />

        <TextView
            style="@style/base_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d5"
            android:text="社团公告" />
    </LinearLayout>
    <include layout="@layout/line"></include>

    <LinearLayout
        android:id="@+id/ll_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/d6">

        <ImageView
            style="@style/group_image_style"
            android:src="@drawable/ic_notice" />

        <TextView
            style="@style/base_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d5"
            android:text="社团活动" />
    </LinearLayout>
</LinearLayout>
