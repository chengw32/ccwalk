<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/root"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="@dimen/d2">

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/d100"
        android:layout_height="@dimen/d50"
        android:scaleType="centerCrop"
        android:src="@mipmap/app_ico" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/d3"
        android:paddingRight="@dimen/d3"
        android:layout_marginLeft="@dimen/d3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            style="@style/base_text_style"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:text="社团内部成员尬舞"
            android:textSize="@dimen/d6" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                style="@style/base_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:layout_weight="1"
                android:textColor="@color/gray3"
                android:text="进行中"
                android:textSize="@dimen/d6" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/base_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已报名11人"
                android:textSize="@dimen/d5" />
        </LinearLayout>
            <TextView
                android:id="@+id/tv_time"
                style="@style/base_text_style"
                android:gravity="right"
                android:textColor="@color/gray3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2018-5-12"
                android:layout_marginLeft="@dimen/d3"
                android:textSize="@dimen/d5" />
    </LinearLayout>
</LinearLayout>