<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="cc.cwalk.com.tab_four.MyGroupActivity">

    <include layout="@layout/base_bar_layout"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                style="@style/base_text_style"
                android:textSize="@dimen/d8"
                android:layout_marginTop="@dimen/d5"
                android:layout_marginRight="@dimen/d5"
                android:padding="@dimen/d5"
                android:text="团服定制"
                android:layout_height="wrap_content"/>


                <TextView
                    style="@style/base_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray3"
                    android:layout_marginLeft="@dimen/d5"
                    android:layout_marginRight="@dimen/d5"
                    android:paddingBottom="@dimen/d10"
                    android:text="由于社团统一管理决定订制团服，自由参与。到负责人报名然后交费用。开始制作后不退款。请知晓。" />

            <include layout="@layout/line"></include>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/d6">

                <TextView
                    style="@style/base_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="费用" />
                <TextView
                    style="@style/base_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:layout_marginLeft="@dimen/d5"
                    android:text="400元" />
            </LinearLayout>

            <include layout="@layout/line"></include>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/d6">

                <TextView
                    style="@style/base_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="截止时间" />
                <TextView
                    style="@style/base_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray3"
                    android:layout_marginLeft="@dimen/d5"
                    android:text="2018-5-13" />
            </LinearLayout>

            <include layout="@layout/line"></include>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/d6">

                <TextView
                    style="@style/base_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="负责人" />
                <TextView
                    style="@style/base_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray3"
                    android:layout_marginLeft="@dimen/d5"
                    android:text="团长" />
            </LinearLayout>
            <include layout="@layout/line"></include>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/d6">

                <TextView
                    style="@style/base_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="负责人联系电话" />
                <TextView
                    style="@style/base_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray3"
                    android:layout_marginLeft="@dimen/d5"
                    android:text="15710677777" />
            </LinearLayout>
            <include layout="@layout/line"></include>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/d6">

                <TextView
                    style="@style/base_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="参与人数" />
                <TextView
                    style="@style/base_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray3"
                    android:layout_marginLeft="@dimen/d5"
                    android:text="张三、李四、海草" />
            </LinearLayout>
            <include layout="@layout/line"></include>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
