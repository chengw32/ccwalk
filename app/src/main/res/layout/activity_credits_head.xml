<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/d15"
        android:background="@drawable/shape_corner_rect_solid_barcolor"
        android:layout_margin="@dimen/d10"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_all_credits"
            android:layout_width="wrap_content"
            style="@style/base_text_style"
            android:textColor="@color/blue"
            android:text="346"
            android:textSize="@dimen/d9"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            style="@style/base_text_style"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/d3"
            android:text="积分"
            android:textSize="@dimen/d6"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            style="@style/base_text_style"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/d3"
            android:text="更新时间 2018-4-21 17:46"
            android:textSize="@dimen/d6"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <include layout="@layout/line"></include>
</LinearLayout>